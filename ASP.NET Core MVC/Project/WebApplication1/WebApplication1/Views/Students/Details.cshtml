@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Image</dt>
    <dd class="col-sm-10">@Model.Image</dd>

    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Grade</dt>
    <dd class="col-sm-10">@Model.Grade</dd>

    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department?.Name</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>