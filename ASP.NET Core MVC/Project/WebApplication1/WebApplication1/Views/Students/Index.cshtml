@model WebApplication1.Helpers.PaginatedList<WebApplication1.Models.Student>

@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var currentFilter = ViewData["CurrentFilter"] as string ?? "";
    int currentPage = Model?.PageIndex ?? 1;
    int totalPages = Model?.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize != null ? (int)ViewBag.PageSize : 5;
}

<h1>Students</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    }
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input name="searchString" class="form-control"
               placeholder="Search by name or department"
               value="@(currentFilter)" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Grade</th>
            <th>Image</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Grade</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" alt="Student Image" style="width:60px;height:60px;object-fit:cover;border-radius:4px;" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </td>
                    <td>@item.Department?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                        @if (User.IsInRole("Admin") || User.IsInRole("HR") || (User.IsInRole("Student") && item.Username == User.Identity?.Name))
                        {
                            <text> | <a asp-action="Edit" asp-route-id="@item.Id">Edit</a></text>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                        {
                            <text> | <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a></text>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No students found.</td>
            </tr>
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Students page navigation">
        <ul class="pagination justify-content-center">

            <!-- First -->
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchString="@currentFilter">First</a>
            </li>

            <!-- Previous -->
            <li class="page-item @(currentPage > 1 ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(currentPage - 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchString="@currentFilter">Previous</a>
            </li>

            <!-- Page numbers -->
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@pageSize"
                       asp-route-searchString="@currentFilter">@i</a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(currentPage < totalPages ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(currentPage + 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchString="@currentFilter">Next</a>
            </li>

            <!-- Last -->
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@totalPages"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchString="@currentFilter">Last</a>
            </li>
        </ul>
    </nav>
}