@model WebApplication1.Helpers.PaginatedList<WebApplication1.Models.Department>
@{
    ViewData["Title"] = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3 d-flex">
    <div class="input-group me-2">
        <input name="searchString" class="form-control"
               placeholder="Search by name or manager..."
               value="@(ViewData["CurrentFilter"] ?? "")" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
    <!-- ✅ Reset button -->
    <a href="@ViewBag.ResetUrl" class="btn btn-outline-secondary">Reset</a>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Manager</th>
            <th>Courses</th>
            <th>Students</th>
            <th>Instructors</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ManagerName</td>
                    <td>@(item.Courses?.Count ?? 0)</td>
                    <td>@(item.Students?.Count ?? 0)</td>
                    <td>@(item.Instructors?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           onclick="return confirm('Are you sure you want to delete this department?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No departments found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- ✅ Pagination controls -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            <!-- First -->
            <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="1"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-pageSize="@ViewBag.PageSize">First</a>
            </li>

            <!-- Previous -->
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-pageSize="@ViewBag.PageSize">Previous</a>
            </li>

            <!-- Page numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-pageSize="@ViewBag.PageSize">@i</a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-pageSize="@ViewBag.PageSize">Next</a>
            </li>

            <!-- Last -->
            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@Model.TotalPages"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-pageSize="@ViewBag.PageSize">Last</a>
            </li>
        </ul>
    </nav>
}