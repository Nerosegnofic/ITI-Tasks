@model IEnumerable<WebApplication1.Models.Department>
@{
    ViewData["Title"] = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input name="searchString" class="form-control"
               placeholder="Search by name or manager..."
               value="@(ViewData["CurrentFilter"] ?? "")" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Manager</th>
            <th>Courses</th>
            <th>Students</th>
            <th>Instructors</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ManagerName</td>
                    <td>@(item.Courses?.Count ?? 0)</td>
                    <td>@(item.Students?.Count ?? 0)</td>
                    <td>@(item.Instructors?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>