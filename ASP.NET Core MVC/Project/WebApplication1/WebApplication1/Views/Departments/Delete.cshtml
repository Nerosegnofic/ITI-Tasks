@model WebApplication1.Models.Department
@{
    ViewData["Title"] = "Delete Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Department</h1>
<hr />

<h3>Are you sure you want to delete this department?</h3>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.ManagerName)</dt>
    <dd class="col-sm-10">@Model.ManagerName</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>