@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Degree</dt>
    <dd class="col-sm-10">@Model.Degree</dd>

    <dt class="col-sm-2">Minimum Degree</dt>
    <dd class="col-sm-10">@Model.MinimumDegree</dd>

    <dt class="col-sm-2">Hours</dt>
    <dd class="col-sm-10">@Model.Hours</dd>

    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department?.Name</dd>

    <dt class="col-sm-2">Instructors</dt>
    <dd class="col-sm-10">
        @if (Model.Instructors != null && Model.Instructors.Any())
        {
            @string.Join(", ", Model.Instructors.Select(i => i.Name))
        }
        else
        {
            <span>No Instructor</span>
        }
    </dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>