@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Degree"></label>
                <input asp-for="Degree" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="MinimumDegree"></label>
                <input asp-for="MinimumDegree" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Hours"></label>
                <input asp-for="Hours" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DeptId">Department</label>
                <select asp-for="DeptId" class="form-control" asp-items="ViewBag.DeptId"></select>
            </div>

            <div class="form-group mb-3">
                <label>Instructors</label>
                <select asp-for="Instructors" multiple class="form-control" asp-items="ViewBag.InstructorIds"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}