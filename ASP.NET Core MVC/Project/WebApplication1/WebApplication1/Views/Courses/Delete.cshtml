@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>
<hr />

<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department?.Name</dd>

    <dt class="col-sm-2">Instructors</dt>
    <dd class="col-sm-10">
        @if (Model.Instructors != null && Model.Instructors.Any())
        {
            @string.Join(", ", Model.Instructors.Select(i => i.Name))
        }
        else
        {
            <span>No Instructor</span>
        }
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>