@model WebApplication1.Helpers.PaginatedList<WebApplication1.Models.Course>
@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var selectedCourseId = ViewBag.SelectedCourseId as int?;
}

<h1>Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <!-- Search by course name -->
        <div class="col-md-3">
            <input type="text" name="searchString" class="form-control"
                   placeholder="Search by course name..."
                   value="@(ViewData["CurrentFilter"] ?? "")" />
        </div>

        <!-- Department filter -->
        <div class="col-md-3">
            <select name="departmentId" class="form-select">
                <option value="">-- All Departments --</option>
                @foreach (var dept in (IEnumerable<SelectListItem>)ViewBag.Departments)
                {
                    if (ViewBag.DepartmentId?.ToString() == dept.Value)
                    {
                        <option value="@dept.Value" selected="selected">@dept.Text</option>
                    }
                    else
                    {
                        <option value="@dept.Value">@dept.Text</option>
                    }
                }
            </select>
        </div>

        <!-- Instructor filter -->
        <div class="col-md-3">
            <select name="instructorId" class="form-select">
                <option value="">-- All Instructors --</option>
                @foreach (var instr in (IEnumerable<SelectListItem>)ViewBag.Instructors)
                {
                    if (ViewBag.InstructorId?.ToString() == instr.Value)
                    {
                        <option value="@instr.Value" selected="selected">@instr.Text</option>
                    }
                    else
                    {
                        <option value="@instr.Value">@instr.Text</option>
                    }
                }
            </select>
        </div>

        <!-- Filter + Reset buttons -->
        <div class="col-md-3">
            <button type="submit" class="btn btn-outline-primary">Filter</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Degree)</th>
            <th>@Html.DisplayNameFor(m => m.First().MinimumDegree)</th>
            <th>@Html.DisplayNameFor(m => m.First().Hours)</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var isJoined = (selectedCourseId.HasValue && selectedCourseId.Value == item.Id);

            <tr class="@(isJoined ? "table-success" : "")">
                <td>@item.Name</td>
                <td>@item.Degree</td>
                <td>@item.MinimumDegree</td>
                <td>@item.Hours</td>
                <td>@item.Department?.Name</td>
                <td>
                    @if (isJoined)
                    {
                        <span class="badge bg-success">Joined</span>
                    }
                    else
                    {
                        <form asp-action="JoinCourse" method="post" style="display:inline">
                            <input type="hidden" name="courseId" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Join</button>
                        </form>
                    }
                    |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       onclick="return confirm('Are you sure you want to delete this course?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ✅ Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-departmentId="@ViewBag.DepartmentId"
                   asp-route-instructorId="@ViewBag.InstructorId"
                   asp-route-pageNumber="1">First</a>
            </li>
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-departmentId="@ViewBag.DepartmentId"
                   asp-route-instructorId="@ViewBag.InstructorId"
                   asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
            </li>

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-departmentId="@ViewBag.DepartmentId"
                       asp-route-instructorId="@ViewBag.InstructorId"
                       asp-route-pageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-departmentId="@ViewBag.DepartmentId"
                   asp-route-instructorId="@ViewBag.InstructorId"
                   asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
            </li>
            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-departmentId="@ViewBag.DepartmentId"
                   asp-route-instructorId="@ViewBag.InstructorId"
                   asp-route-pageNumber="@Model.TotalPages">Last</a>
            </li>
        </ul>
    </nav>
}