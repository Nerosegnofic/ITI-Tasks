@model WebApplication1.Models.CourseStudent
@{
    ViewData["Title"] = "Edit Course Enrollment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Course Enrollment</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Course Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="CrsId" class="control-label">Course</label>
                <select asp-for="CrsId" class="form-control" asp-items="ViewBag.CrsId"></select>
                <span asp-validation-for="CrsId" class="text-danger"></span>
            </div>

            <!-- Student Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="StdId" class="control-label">Student</label>
                <select asp-for="StdId" class="form-control" asp-items="ViewBag.StdId"></select>
                <span asp-validation-for="StdId" class="text-danger"></span>
            </div>

            <!-- Degree Input -->
            <div class="form-group mb-3">
                <label asp-for="Degree" class="control-label"></label>
                <input asp-for="Degree" class="form-control" />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}