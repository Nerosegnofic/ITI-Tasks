@model IEnumerable<WebApplication1.Models.CourseStudent>
@{
    ViewData["Title"] = "CourseStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int currentPage = ViewData["CurrentPage"] != null ? (int)ViewData["CurrentPage"] : 1;
    int totalPages = ViewData["TotalPages"] != null ? (int)ViewData["TotalPages"] : 1;
    int pageSize = ViewData["PageSize"] != null ? (int)ViewData["PageSize"] : 5;
    string currentFilter = ViewData["CurrentFilter"]?.ToString() ?? "";
}

<h1>CourseStudents</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Add New</a>
    }
</p>

<!-- 🔍 Search Form -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control"
               placeholder="Search by Student or Course..."
               value="@currentFilter" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Course</th>
            <th>Student</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Degree)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Course?.Name</td>
                    <td>@item.Student?.Name</td>
                    <td>@item.Degree</td>
                    <td>
                        @* Edit button, role-restricted *@
                        @if (User.IsInRole("Admin") || User.IsInRole("HR") ||
                                        (User.IsInRole("Student") && item.Student?.Username == User.Identity?.Name) ||
                                        (User.IsInRole("Instructor") && item.Course?.Instructors.Any(i => i.Username == User.Identity?.Name) == true))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            @: |
                        }

                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                        @* Delete button, role-restricted *@
                        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                        {
                            @: |
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="text-danger"
                               onclick="return confirm('Are you sure you want to delete this item?');">
                                Delete
                            </a>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No course-student records found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- 📄 Pagination -->
@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            <!-- First -->
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchString="@currentFilter">First</a>
            </li>

            <!-- Previous -->
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@(currentPage - 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchString="@currentFilter">Previous</a>
            </li>

            <!-- Page numbers -->
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@pageSize"
                       asp-route-searchString="@currentFilter">@i</a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@(currentPage + 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchString="@currentFilter">Next</a>
            </li>

            <!-- Last -->
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@totalPages"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchString="@currentFilter">Last</a>
            </li>
        </ul>
    </nav>
}