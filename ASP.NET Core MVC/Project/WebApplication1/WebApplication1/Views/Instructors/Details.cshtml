@model WebApplication1.Models.Instructor
@{
    ViewData["Title"] = "Instructor Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Instructor Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Name)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Salary)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Salary)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Address)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Address)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Image)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(m => m.Image)</dd>

    <dt class="col-sm-3">Department</dt>
    <dd class="col-sm-9">@Model.Department.Name</dd>

    <dt class="col-sm-3">Course</dt>
    <dd class="col-sm-9">@Model.Course.Name</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
